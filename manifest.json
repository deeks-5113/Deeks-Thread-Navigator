{
  "manifest_version": 3,
  "name": "Thread Navigator for ChatGPT & Gemini",
  "version": "1.1",
  "description": "Instantly navigate long AI conversation threads with a floating table of contents. Supports ChatGPT and Gemini.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*", 
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}